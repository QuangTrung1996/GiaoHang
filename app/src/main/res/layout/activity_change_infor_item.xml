<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.chnagInforUser.changeInforItem"
    android:gravity="center_vertical"
    android:background="#f1efef">
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/InforChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="đỗ công phúc"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/black"/>
    <FrameLayout
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/HuyChange"
            android:textColor="#016fff"
            android:layout_gravity="end"
            android:layout_marginEnd="150dp"
            android:background="#f1efef"
            android:text="@string/huy"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/xongChange"
            android:textColor="#0033ff"
            android:background="#f1efef"
            android:text="@string/xong"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            tools:ignore="RtlHardcoded" />
    </FrameLayout>
</LinearLayout>